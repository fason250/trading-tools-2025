if not compatMode and enableRelaxedHTF
    // Relaxed: Daily + 4H OR extreme position
    relaxedOK_long = (_dBull and _h4Bull) or inExtremeDiscount
    relaxedOK_short = (not _dBull and not _h4Bull) or inExtremePremium
    
